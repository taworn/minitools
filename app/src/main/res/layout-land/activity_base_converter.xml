<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".BaseConverterActivity">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:stretchColumns="1">

        <TableRow>

            <TextView android:text="Base 2" />

            <view
                android:id="@+id/editTextBase2"
                class="diy.minitools.NoIMEEditText"
                android:digits="01"
                android:inputType="numberSigned" />
        </TableRow>

        <TableRow>

            <TextView android:text="Base 8" />

            <view
                android:id="@+id/editTextBase8"
                class="diy.minitools.NoIMEEditText"
                android:digits="01234567"
                android:inputType="numberSigned" />
        </TableRow>

        <TableRow>

            <TextView android:text="Base 10" />

            <view
                android:id="@+id/editTextBase10"
                class="diy.minitools.NoIMEEditText"
                android:digits="0123456789"
                android:inputType="numberSigned" />
        </TableRow>

        <TableRow>

            <TextView android:text="Base 16" />

            <view
                android:id="@+id/editTextBase16"
                class="diy.minitools.NoIMEEditText"
                android:digits="0123456789ABCDEF"
                android:inputType="numberSigned" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:weightSum="4">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                android:layout_weight=".20"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                android:layout_weight=".20"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_weight=".20"
                android:text="3" />

            <Button
                android:id="@+id/buttonA"
                android:layout_weight=".20"
                android:text="A" />

            <Button
                android:id="@+id/buttonD"
                android:layout_weight=".20"
                android:text="D" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                android:layout_weight=".20"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_weight=".20"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                android:layout_weight=".20"
                android:text="6" />

            <Button
                android:id="@+id/buttonB"
                android:layout_weight=".20"
                android:text="B" />

            <Button
                android:id="@+id/buttonE"
                android:layout_weight=".20"
                android:text="E" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                android:layout_weight=".20"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                android:layout_weight=".20"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_weight=".20"
                android:text="9" />

            <Button
                android:id="@+id/buttonC"
                android:layout_weight=".20"
                android:text="C" />

            <Button
                android:id="@+id/buttonF"
                android:layout_weight=".20"
                android:text="F" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/button0"
                android:layout_weight=".60"
                android:text="0" />

            <Button
                android:id="@+id/buttonDelete"
                android:layout_weight=".20"
                android:text="Delete" />

            <Button
                android:id="@+id/buttonClear"
                android:layout_weight=".20"
                android:text="Clear" />
        </TableRow>
    </TableLayout>

</LinearLayout>
